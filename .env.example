# AI Video Generation System - Environment Configuration
# Copy this file to .env and fill in your API keys

# ===================================
# API Keys (REQUIRED)
# ===================================

# Anthropic Claude API key for storyboard generation
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Replicate API token for video generation
# Get your token at: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=r8_xxxxx

# OpenAI API key (optional, for GPT-based storyboarding)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxx

# HuggingFace token (optional, for HF Inference API)
# Get your token at: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=hf_xxxxx

# ===================================
# Video Generation Configuration
# ===================================

# Directory paths
VIDEO_OUTPUT_DIR=./workspace/videos
VIDEO_UPLOAD_DIR=./workspace/uploads
VIDEO_TEMP_DIR=./workspace/temp

# Generation limits
MAX_VIDEO_DURATION=60
MAX_SHOTS_PER_VIDEO=10
MAX_UPLOAD_SIZE_MB=50

# Default model
DEFAULT_VIDEO_MODEL=replicate:svd-xt
DEFAULT_LLM_MODEL=claude-3-5-sonnet-20241022

# ===================================
# Model Configuration
# ===================================

# Local models (requires GPU)
ENABLE_LOCAL_MODELS=false
GPU_MEMORY_FRACTION=0.9
DEVICE=cuda

# Model cache directory
TRANSFORMERS_CACHE=./models_cache

# ===================================
# API Server Configuration
# ===================================

# Server settings
API_HOST=0.0.0.0
API_PORT=8000

# CORS settings (comma-separated origins)
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# WebSocket settings
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10

# Job management
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT_SECONDS=600
CLEANUP_OLD_JOBS_DAYS=7

# ===================================
# Logging Configuration
# ===================================

LOG_LEVEL=info
LOG_FILE=./logs/ai-video.log
LOG_FORMAT=json

# ===================================
# Database Configuration (Phase 4)
# ===================================

# PostgreSQL connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/aivideo

# Redis connection string
# REDIS_URL=redis://localhost:6379/0

# ===================================
# Task Queue Configuration (Phase 4)
# ===================================

# Celery broker URL
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ===================================
# Security Configuration (Phase 4)
# ===================================

# Secret key for JWT tokens
# SECRET_KEY=your-secret-key-here-change-in-production

# Session configuration
# SESSION_LIFETIME_HOURS=24

# Rate limiting
# RATE_LIMIT_PER_MINUTE=10
# RATE_LIMIT_PER_HOUR=100

# ===================================
# Development Settings
# ===================================

# Enable debug mode (never use in production!)
DEBUG=false

# Enable API documentation
ENABLE_DOCS=true

# Enable file browser (dev only)
ENABLE_FILE_BROWSER=false
