# AI Video Generation - Environment Variables

# Required: Anthropic API Key (for Claude storyboard generation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Required: Replicate API Token (for video generation)
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Optional: OpenAI API Key (alternative LLM for storyboards)
# OPENAI_API_KEY=your_openai_api_key_here

# Optional: HuggingFace Token (for HF models)
# HUGGINGFACE_TOKEN=your_hf_token_here

# Video Generation Settings
MAX_VIDEO_DURATION=60
MAX_SHOTS_PER_VIDEO=10
DEFAULT_VIDEO_MODEL=replicate:svd-xt
DEFAULT_LLM=claude

# Local Model Settings (for future GPU support)
ENABLE_LOCAL_MODELS=false
GPU_MEMORY_FRACTION=0.9

# API Settings (for Phase 2 - FastAPI)
API_HOST=0.0.0.0
API_PORT=8000
ENABLE_CORS=true
MAX_CONCURRENT_JOBS=3
